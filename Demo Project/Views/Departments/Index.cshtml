@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Departments</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
</p>
@{
    if(Model.Count() == 0)
    {
        <div class="alert alert-info" role="alert">
            There are no departments in the database.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataOfCreation)
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Updata
                    </th>
                    <th>
                        Delete
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataOfCreation)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a> 
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> 
                        </td>
                        
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}


